@using ContentModels = Umbraco.Web.PublishedModels;

@inherits UmbracoViewPage
@{
    Layout = null;
    string headerClass = string.Empty;
    bool showLanding = false;

    if (Model.ContentType?.Alias == ContentModels.Site.ModelTypeAlias)
    {
        headerClass = "reveal alt";
        showLanding = true;
    }
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!--[if lte IE 8]><script src="/scripts/ie/html5shiv.js"></script><![endif]-->
    <link rel="stylesheet" href="/css/main.css" />
    <!--[if lte IE 8]><link rel="stylesheet" href="/css/ie8.css" /><![endif]-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@Model.Name - @(Model.Value<string>("siteName"))</title>
    <meta name="description" content="@(Model.Value<string>("metaDescription"))">
    @RenderSection("Header", required: false)
</head>
<body class="@showLanding ?? landing">
    <div id="page-wrapper">
        <header id="header" class="@headerClass">
            <h1>
                <a class="@Html.Raw(Model.Id == Model.Root()?.Id ? " active" : "")" href="@Model.Root().Url">
                    @Model.Root().Name
                </a>
            </h1>
            @Html.Partial("~/Views/Partials/Navigation/TopNavigation.cshtml")
        </header>
        @RenderBody()
        <!-- Footer -->
        <footer id="footer">
            <ul class="menu">
                <li><a href="/privacy-policy">Privacy Policy</a></li>
                <li><a href="http://umbraco.com">Umbraco.com</a></li>
            </ul>
            <div class="copyright">
                &copy; Umbraco.com. All rights reserved.
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="/scripts/jquery.min.js"></script>
    <script src="/scripts/jquery.dropotron.min.js"></script>
    <script src="/scripts/jquery.scrollgress.min.js"></script>
    <script src="/scripts/skel.min.js"></script>
    <script src="/scripts/util.js"></script>
    <!--[if lte IE 8]><script src="/scripts/ie/respond.min.js"></script><![endif]-->
    <script src="/scripts/main.js"></script>
</body>
</html>
