<div class="wrapper style3">
    <section class="container">
        <header class="major">
            <h2>@Model.GettingStartedTitle</h2>
        </header>
        <div class="row">
            @foreach (var sectionItem in Model.GettingStartedSection)
            {
                <div class="4u 12u(narrower)">
                    <section class="special">
                        <a href="#" class="image fit"><img src="@sectionItem.ItemImage.Url" alt="@sectionItem.ItemTitle" /></a>
                        <h3>@sectionItem.ItemTitle</h3>
                        <p>
                            @sectionItem.ItemSummary
                        </p>
                        <ul class="actions">
                            <li><a href="" title="@sectionItem.ItemTitle" class="button alt">@sectionItem.ItemTitle</a></li>
                        </ul>
                    </section>
                </div>
            }
        </div>
    </section>
</div>